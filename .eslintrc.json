{
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "react/jsx-uses-react": "warn",
      "react/jsx-uses-vars": "warn"
    },
    "settings": {
      "react": {
        "version": "detect" // Automatically detect the React version
      }
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    }
  }
  